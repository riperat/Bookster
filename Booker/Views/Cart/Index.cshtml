@model IEnumerable<Booker.Database.Entities.Cart>

@{
    ViewData["Title"] = "Checkout";
}

<div class="container">
    <h2>List of Books</h2>
    <table class="table">
        <thead>
        <tr>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Change Quantity</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Book.Title</td>
                <td>@item.Amount</td>
                <td>
                    <form asp-controller="Cart" asp-action="UpdateQuantity" method="post">
                        <input type="hidden" name="cartItemId" value="@item.BookId" />
                        <input type="number" name="quantity" value="@item.Amount" min="1" max="10" />
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    </form>
                </td>
                <td>
                    <a asp-controller="Cart" asp-action="RemoveFromCart" asp-route-id="@item.BookId" class="btn btn-sm btn-danger">Remove</a>
                </td>
            </tr>
        }
        </tbody>
    </table>

    <div class="row">
        <div class="col-md-6">
            <a asp-controller="Home" asp-action="Index" asp-controller="Cart" class="btn btn-secondary">Back to Cart</a>
        </div>
    </div>
</div>